@page
@model BookReader.Pages.Books.DeleteModel

@{
    ViewData["Title"] = "Usuń pozycję z listy";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Usuń pozycję z listy</h1>

<h3>Jesteś pewny, że chcesz usunąć?</h3>
<div>
    <h4>Książka</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Category.CategoryID)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Book.BookID" />
        <input type="submit" value="Anuluj" class="btn btn-danger" /> |
        <a asp-page="./Index">Wróć do listy</a>
    </form>
</div>
