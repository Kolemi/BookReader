@page
@model BookReader.Pages.IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h3>Login Form</h3>
    <form method="post" asp-page="Index">
        <table>
            <tr>
                <td>Email</td>
                <td><input type="text" asp-for="@Model.Email" /></td>
            </tr>
            <tr>
                <td>Password</td>
                <td><input type="password" asp-for="@Model.Password" /></td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td><input type="submit" value="Email" /></td>
            </tr>
        </table>
    </form>
</body>
</html>